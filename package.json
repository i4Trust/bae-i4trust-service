{
    "name": "NGSI-LD Data Service",
    "author": "fdelavega",
    "version": "2.0.0",
    "module": "i4trust_service.I4TrustService",
    "media_types": ["FIWARE NGSI-LD"],
    "formats": ["URL"],
    "overrides": [],
    "pull_accounting": true,
    "form_order": ["ar_id", "ar_token_endpoint", "ar_policy_endpoint", "minutes", "resource_type", "get_allowed", "get_attributes", "patch_allowed", "patch_attributes", "post_allowed", "post_attributes", "delete_allowed", "delete_attributes"],
    "form": {
        "minutes": {
            "type": "text",
            "label": "Duration in Minutes",
            "placeholder": "100000",
            "mandatory": true
        },
        "ar_token_endpoint": {
            "type": "text",
            "label": "AR /token Endpoint",
            "placeholder": "https://pdc-as.i4trust.fiware.io/token",
            "mandatory": true
        },
	"ar_policy_endpoint": {
            "type": "text",
            "label": "AR /createpolicy Endpoint",
            "placeholder": "https://pdc-as.i4trust.fiware.io/createpolicy",
            "mandatory": true
        },
        "ar_id": {
            "type": "text",
            "label": "AR ID",
            "placeholder": "EU.EORI.NL000000000",
            "mandatory": true
        },
        "resource_type": {
            "type": "text",
            "label": "Resource Type",
            "placeholder": "DELIVERYORDER",
            "mandatory": true
        },
        "patch_allowed": {
            "type": "checkbox",
            "label": "PATCH",
            "default": false
        },
        "patch_attributes": {
            "type": "text",
            "label": "PATCH Attributes",
            "placeholder": "pta,pda"
        },
        "get_allowed": {
            "type": "checkbox",
            "label": "GET",
            "default": true
        },
        "get_attributes": {
            "type": "text",
            "label": "GET Attributes",
            "placeholder": "*"
        },
	    "post_allowed": {
            "type": "checkbox",
            "label": "POST",
            "default": false
        },
        "post_attributes": {
            "type": "text",
            "label": "POST Attributes",
            "placeholder": "*"
        },
	    "delete_allowed": {
            "type": "checkbox",
            "label": "DELETE",
            "default": false
        },
        "delete_attributes": {
            "type": "text",
            "label": "DELETE Attributes",
            "placeholder": "*"
        }
    }
}
